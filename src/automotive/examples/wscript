# -*- Mode: python; py-indent-offset: 4; indent-tabs-mode: nil; coding: utf-8; -*-

def build(bld):
    obj = bld.create_ns3_program('v2i-areaSpeedAdvisor-lte', ['automotive', 'lte', 'traci','visualizer'])
    obj.source = 'v2i-areaSpeedAdvisor-lte.cc'
    
    obj = bld.create_ns3_program('v2i-areaSpeedAdvisor-80211p', ['automotive', 'wave', 'traci','visualizer'])
    obj.source = 'v2i-areaSpeedAdvisor-80211p.cc'

    obj = bld.create_ns3_program('v2v-emergencyVehicleAlert-cv2x', ['automotive', 'cv2x', 'traci','visualizer'])
    obj.source = 'v2v-emergencyVehicleAlert-cv2x.cc'

    obj = bld.create_ns3_program('v2v-emergencyVehicleAlert-80211p', ['automotive', 'wave', 'traci','visualizer'])
    obj.source = 'v2v-emergencyVehicleAlert-80211p.cc'

    obj = bld.create_ns3_program('v2x-emulator', ['automotive', 'fd-net-device', 'traci'])
    obj.source = 'v2x-emulator.cc'
